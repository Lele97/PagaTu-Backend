# PagaTu Environment Variables Template
# Copy this file to .env and replace with your actual values
# NEVER commit .env file to version control

# ==================================================
# JWT Configuration
# ==================================================
# Generate a secure 256-bit key using: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_TO_SECURE_256_BIT_KEY
JWT_EXPIRATION=86400000

# ==================================================
# Database Configuration
# ==================================================
DB_HOST=pg-pagatu
DB_PORT=5432
DB_NAME_AUTH=auth
DB_NAME_COFFEE=coffee
DB_USERNAME=pagatu
DB_PASSWORD=CHANGE_ME_TO_SECURE_DB_PASSWORD

# PostgreSQL Root Password
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_ROOT_PASSWORD

# ==================================================
# Email Configuration (Gmail)
# ==================================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=CHANGE_ME_TO_GMAIL_APP_PASSWORD

# ==================================================
# Application Configuration
# ==================================================
DOMAIN_URL=http://localhost:8888

# ==================================================
# CORS Configuration
# ==================================================
CORS_ALLOWED_ORIGINS=http://localhost:8888,https://*.trycloudflare.com,https://*.ngrok-free.app
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS,HEAD
CORS_ALLOWED_HEADERS=Authorization,Content-Type,Accept-Language,Cache-Control,X-Requested-With,ngrok-skip-browser-warning,Accept,Origin,Access-Control-Request-Method,Access-Control-Request-Headers,Access-Control-Allow-Origin,X-Reset-Token
CORS_EXPOSED_HEADERS=Authorization,Content-Type

# ==================================================
# Service URLs
# ==================================================
EUREKA_URL=http://eureka:8080/eureka/
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# ==================================================
# Development Settings
# ==================================================
SPRING_PROFILES_ACTIVE=prod

# ==================================================
# Server Ports
# ==================================================
GATEWAY_PORT=8080
AUTH_PORT=8081
COFFEE_PORT=8082
MAIL_SERVICE_PORT=8083
EUREKA_PORT=8761